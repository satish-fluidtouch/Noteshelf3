#--------------------------------------#
# (AK) These lanes can be further simplified with sub lanes creation, eventually number of lines will be reduced.
# But,
# I'm keeping these lanes as independent as possible to make this understandable by anyone.
#--------------------------------------#

##############################################################
#####################   iOS   ################################
##############################################################
platform :ios do
    desc "NS3 Beta iOS"
    lane :beta do |options|

        app_identifier = "com.fluidtouch.noteshelf3-beta"

        # Step 1

        # 1. Reset the repo
        # 2. Switch the branch or fallback to develop
        # 3. Take latest Pull
        reset_git_repo(force: true, disregard_gitignore: false)
        branch = options[:branch] ? options[:branch] : "develop"
        sh("git", "switch", branch)
        ensure_git_branch(branch: branch)
        git_pull


        # Step 2

        # 1. Fetch the latest build number from Appstore Connect
        # 2. Increment the build number
        build_number = latest_testflight_build_number(app_identifier: app_identifier) + 1
        increment_build_number({ build_number: build_number })

        # Step 3

        # 1. Prepare release note with the branch name and the git commits
        releaseNotes = "*******" + branch + "*******\n" + changelog_from_git_commits(pretty: "- %s", date_format: "short")

        # Step 4

        # 1. Build app with the configuration
        build_app(workspace: "Noteshelf3.xcworkspace",
                  scheme: "Noteshelf3",
                  configuration: "Beta",
                  output_directory: "build",
                  silent: true,
                  clean: true,
                  export_options: "fastlane/export_options.plist",
                  silent: true)

        # Step 5
        # 1. send a local terminal notification
        notification(subtitle: "üõ†Ô∏è NS3 Beta Finished Building", message: "Ready to upload...")

        # Step 6
        # 1. Upload the ipa to testflight
        upload_to_testflight(skip_waiting_for_build_processing: false,
                            app_platform:"ios",
                            ipa: "build/NS3 Beta.ipa",
                            app_identifier: app_identifier,
                            changelog: releaseNotes)

        # Step 7
        # 1. send a local terminal notifier
        # 2. send a slack message
        notification(title: "NS3 Beta", subtitle: "‚úÖ iOS Finished Uploading", message: "Uploaded successfully")
        slack(message: "‚úÖ NS3 Beta iOS Finished Uploading",
              default_payloads: [:lane, :git_branch, :git_author],
              payload: {
              "Build Number" => build_number,
              "Release Notes" => releaseNotes
              })
    end

    desc "Noteshelf 3 iOS"
    lane :release do |options|
        app_identifier = "com.fluidtouch.noteshelf3"

        # Step 1

        # 1. Reset the repo
        # 2. Switch the branch or fallback to develop
        # 3. Take latest Pull
        reset_git_repo(force: true, disregard_gitignore: false)
        branch = options[:branch] ? options[:branch] : "develop"
        sh("git", "switch", branch)
        ensure_git_branch(branch: branch)
        git_pull


        # Step 2

        # 1. Fetch the latest build number from Appstore Connect
        # 2. Increment the build number
        build_number = latest_testflight_build_number(app_identifier: app_identifier) + 1
        increment_build_number({ build_number: build_number })

        # Step 3

        # 1. Prepare release note with the branch name and the git commits
        releaseNotes = "*******" + branch + "*******\n" + changelog_from_git_commits(pretty: "- %s", date_format: "short")

        # Step 4

        # 1. Build app with the configuration
        build_app(workspace: "Noteshelf3.xcworkspace",
                  scheme: "Noteshelf3",
                  output_directory: "build",
                  silent: true,
                  clean: true,
                  configuration: "Release",
                  export_options: "fastlane/export_options.plist",
                  silent: true)

        # Step 5
        # 1. send a local terminal notification
        notification(title: "Noteshelf 3", subtitle: "üõ†Ô∏è iOS Finished Building", message: "Ready to upload...")

        # Step 6
        # 1. Upload the ipa to testflight
        upload_to_testflight(skip_waiting_for_build_processing: false,
                             app_platform:"ios",
                             ipa: "build/Noteshelf 3.ipa",
                             app_identifier: app_identifier,
                             changelog: releaseNotes)

        # Step 7
        # 1. send a local terminal notifier
        # 2. send a slack message
        notification(title: "Noteshelf 3", subtitle: "‚úÖ iOS Finished Uploading", message: "Uploaded successfully")
        slack(message: "‚úÖ Noteshelf 3 iOS Finished Uploading",
              default_payloads: [:lane, :git_branch, :git_author],
              payload: {
              "Build Number" => build_number,
              "Release Notes" => releaseNotes
              })
    end
    
    error do |lane, exception|
        notification(subtitle: "‚õîÔ∏è Error", message: exception.to_s)
        slack(message: exception.to_s)
    end
end

##############################################################
#####################   MAC   ################################
##############################################################
platform :mac do
    desc "NS3 Beta macOS"
    lane :beta do |options|

        app_identifier = "com.fluidtouch.noteshelf3-beta"

        # Step 1

        # 1. Reset the repo
        # 2. Switch the branch or fallback to develop
        # 3. Take latest Pull
        reset_git_repo(force: true, disregard_gitignore: false)
        branch = options[:branch] ? options[:branch] : "develop"
        sh("git", "switch", branch)
        ensure_git_branch(branch: branch)
        git_pull

        # Step 2

        # 1. Fetch the latest build number from Appstore Connect
        # 2. Increment the build number
        build_number = latest_testflight_build_number(app_identifier: app_identifier, platform: "osx") + 1
        increment_build_number({ build_number: build_number })

        # Step 3

        # 1. Prepare release note with the branch name and the git commits
        releaseNotes = "*******" + branch + "*******\n" + changelog_from_git_commits(pretty: "- %s", date_format: "short")

        # Step 4

        # 1. Build app with the configuration
        build_mac_app(workspace: "Noteshelf.xcworkspace",
                      scheme: "Noteshelf3",
                      output_directory: "build",
                      silent: true,
                      clean: true,
                      destination: 'platform=macOS,arch=x86_64,variant=Mac Catalyst',
                      installer_cert_name: '3rd Party Mac Developer Installer: Fluid Touch Pte. Ltd. (CNTLGGQX2J)',
                      configuration: "Beta",
                      export_options: "fastlane/export_options_mac.plist",
                      silent: true)

        # Step 5
        # 1. send a local terminal notification
        notification(title: "NS3 Beta", subtitle: "üõ†Ô∏è macOS Finished Building", message: "Ready to upload...")

        # Step 6
        # 1. Upload the ipa to testflight
        upload_to_testflight(skip_waiting_for_build_processing: false,
                             app_identifier: app_identifier,
                             app_platform:"osx",
                             pkg: "build/NS3 Beta.pkg",
                             changelog: releaseNotes)

        # Step 7
        # 1. send a local terminal notifier
        # 2. send a slack message
        notification(title: "NS3 Beta", subtitle: "‚úÖ macOS Finished Uploading", message: "Uploaded successfully")
        slack(message: "‚úÖ NS3 Beta macOS Finished Uploading",
              default_payloads: [:lane, :git_branch, :git_author],
              payload: {
              "Build Number" => build_number,
              "Release Notes" => releaseNotes
              })

    end

    desc "Noteshelf 3 macOS"
    lane :release do |options|
        app_identifier = "com.fluidtouch.noteshelf3"

        # Step 1

        # 1. Reset the repo
        # 2. Switch the branch or fallback to develop
        # 3. Take latest Pull
        reset_git_repo(force: true, disregard_gitignore: false)
        branch = options[:branch] ? options[:branch] : "develop"
        sh("git", "switch", branch)
        ensure_git_branch(branch: branch)
        git_pull

        # Step 2

        # 1. Fetch the latest build number from Appstore Connect
        # 2. Increment the build number
        build_number = latest_testflight_build_number(app_identifier: app_identifier, platform: "osx") + 1
        increment_build_number({ build_number: build_number })

        # Step 3

        # 1. Prepare release note with the branch name and the git commits
        releaseNotes = "*******" + branch + "*******\n" + changelog_from_git_commits(pretty: "- %s", date_format: "short")

        # Step 4

        # 1. Build app with the configuration
        build_mac_app(workspace: "Noteshelf.xcworkspace",
                      scheme: "Noteshelf3",
                      output_directory: "build",
                      silent: true,
                      clean: true,
                      destination: 'platform=macOS,arch=x86_64,variant=Mac Catalyst',
                      installer_cert_name: '3rd Party Mac Developer Installer: Fluid Touch Pte. Ltd. (CNTLGGQX2J)',
                      configuration: "Release",
                      export_options: "fastlane/export_options_mac.plist",
                      silent: true)

        # Step 5
        # 1. send a local terminal notification
        notification(title: "Noteshelf 3", subtitle: "üõ†Ô∏è macOS Finished Building", message: "Ready to upload...")

        # Step 6
        # 1. Upload the ipa to testflight
        upload_to_testflight(skip_waiting_for_build_processing: false,
                            app_platform:"osx",
                            pkg: "build/Noteshelf 3.pkg",
                            app_identifier: app_identifier,
                            changelog: releaseNotes)

        # Step 7
        # 1. send a local terminal notifier
        # 2. send a slack message
        notification(title: "Noteshelf 3", subtitle: "‚úÖ macOS Finished Uploading", message: "Uploaded successfully")
        slack(message: "‚úÖ Noteshelf 3 macOS Finished Uploading",
            default_payloads: [:lane, :git_branch, :git_author],
            payload: {
            "Build Number" => build_number,
            "Release Notes" => releaseNotes
            })

    end

    error do |lane, exception|
        notification(subtitle: "‚õîÔ∏è Error", message: exception.to_s)
        slack(message: exception.to_s)
    end
end
